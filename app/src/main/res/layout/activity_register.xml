<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E5A53"
    tools:context=".location_registrations.RegisterActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnSave">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgPlaceImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@android:drawable/ic_menu_camera" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Location Name"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter City Name"
                android:inputType="textPostalAddress"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/edtStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Street Name"
                android:inputType="textPostalAddress"
                android:textColor="@color/white"/>


            <EditText
                android:id="@+id/edtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Current Date"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/edtRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Place Rating"
                android:inputType="number"
                android:textColor="@color/white"
                />
<!--            <RatingBar-->
<!--                android:id="@+id/edtRating"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Enter Place Rating"-->
<!--                android:inputType="number"-->
<!--                android:textColor="@color/white"-->
<!--                />-->

            <LinearLayout
                android:id="@+id/linearRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_y_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_y_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_y_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_y_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_y_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStar10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Place Review"
                android:inputType="text"
                android:lines="3"
                android:textColor="@color/white"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
